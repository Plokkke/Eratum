{
	"name": "eratum",
	"version": "2.0.1",
	"author": "Antoine Caron <acaron@trustdesigner.com>",
	"license": "MIT",
	"description": "Module defining wrapper over Error class.",
	"keywords": [
		"Errors",
		"Throws",
		"Rejections",
		"Failures"
	],
	"repository": {
		"type": "git",
		"url": "git://gitlab.com:antoinecaron/eratum.git"
	},
	"main": "build/sources/index.js",
	"types": "build/sources/index.d.ts",
	"files": [
		"build/**/*"
	],
	"scripts": {
		"build": "tsc -p tsconfig.json",
		"coverage": "nyc npm run test",
		"lint": "tslint -p tsconfig.json -o reports/tslint.report && eslint --ignore-pattern build -o reports/eslint.report **/**.js",
		"produce": "npm run lint && npm run build && npm run test",
		"postversion": "git push && git push --tags && npm run publish",
		"test": "mocha -r ts-node/register **/*.test.ts **/*.test.js",
		"version": "npm run produce"
	},
	"dependencies": {
		"@types/ejs": "^2.6.3",
		"@types/lodash": "^4.14.149",
		"@types/node": "^12.12.12",
		"ejs": "^2.7.4",
		"lodash": "^4.17.15"
	},
	"devDependencies": {
		"@plokkke/toolbox": "^0.2.0",
		"@types/chai": "^4.2.5",
		"@types/mocha": "^5.2.7",
		"chai": "^4.2.0",
		"eslint": "^6.7.1",
		"eslint-config-airbnb-base": "^14.0.0",
		"eslint-plugin-import": "^2.18.2",
		"mocha": "^6.2.2",
		"nyc": "^14.1.1",
		"ts-mocha": "^6.0.0",
		"ts-node": "^8.5.2",
		"tslint": "^5.20.1",
		"tslint-config-airbnb": "^5.11.2",
		"typescript": "^3.7.2"
	},
	"nyc": {
		"extension": [
			".ts"
		],
		"include": [
			"sources"
		],
		"exclude": [
			"**/*.test.ts/",
			"sources/Validator.ts"
		],
		"reporter": [
			"html",
			"lcovonly",
			"text-summary"
		]
	}
}
